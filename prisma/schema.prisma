// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  previewFeatures = ["driverAdapters"]

}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Student {
    Student_id Int     @id @default(autoincrement())
    email      String  @unique
    name       String
    major      String
    projects   Project_Student[]
}

model Project {
    Project_id   Int           @id @default(autoincrement())
    title        String
    description  String?
    startDate    DateTime 
    endDate      DateTime
    status       String
    students     Project_Student[]
    advisors     Project_advisor[]
}

model advisors {
    advisors_id  Int     @id @default(autoincrement())
    name         String
    department   String
    email        String  @unique
    projects     Project_advisor[]
}

model Project_Student {
    id           Int      @id @default(autoincrement())
    student      Student  @relation(fields: [studentId], references: [Student_id])
    studentId    Int
    project      Project  @relation(fields: [projectId], references: [Project_id])
    projectId    Int
}

model Project_advisor {
    id           Int       @id @default(autoincrement())
    advisor      advisors  @relation(fields: [advisorId], references: [advisors_id])
    advisorId    Int
    project      Project   @relation(fields: [projectId], references: [Project_id])
    projectId    Int
}

